<%= @post = (@post.to_i * -1).to_s if @type == "comment" %>
$("#like_counter_<%= @post %>").html(<%= @likes %>);
$("#thumb<%= @post %>").addClass('thumb_icon_liked').removeClass('thumb_icon');
$("#thumb<%= @post %>").attr("href", "<%= like_path(type: @type, id: Like.find_by(author: current_user, likeable: @like.likeable).id) %>");
$("#thumb<%= @post %>").attr("data-method", "delete");