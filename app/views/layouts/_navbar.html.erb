  </span>
  <div id="search_form">
    <%= form_for :search, url: {controller: 'users', action: 'index'}, method: :get do |f| %>
      <%= f.text_field :name, class: "text_field", size: 25, placeholder: "Find new friends" %>
      <%= f.submit "🔍", class: "button" %>
    <% end %>
  </div>
  <div class="nav_buttons">
    <a 
      id="profile_button" href=<%= profile_path current_user.id %>>
      <%= current_user.name.split(" ")[0] %> 
    </a>
    <a id=home_button href=<%= root_path %>>H O M E</a>
    <a
      class="notifications"
      onclick="showMenu()"
      id=<%= @requests ? "pending_notifications" : "notifications" %>> 
      <%= @requests ? "🔔#{@requests.count}": "🔔" %>
    </a>
    <%= link_to("🚪", destroy_user_session_path, method: :delete, id: "logout_button") %>
  </div>

  <% if @requests %>
    <div class="dropdown_menu">
      <% @requests.each do |request| %>
        <%= link_to(User.find(request.request_sender).name,
            profile_path(id: request.request_sender), target: :_blank) %>   
        <%= link_to("Accept", friendship_path(id: request.request_sender),
            method: :post, id: "accept_button") %>
        <%= link_to("Decline", friend_request_path(id: request.id),
            method: :delete, id: "decline_button") %>
      <% end %>
    </div>
  <% end %>
</div>
